;;; doom-matugen-theme.el --- Material Design 3 theme generated by Matugen -*- lexical-binding: t; no-byte-compile: t; -*-
;;
;;; Commentary:
;; A Doom Emacs theme following Material Design 3 color role guidelines.
;; Generated with matugen and properly mapped to M3 semantic color roles.
;;
;; Note on org-hide with transparent backgrounds:
;; Emacs cannot make text truly transparent. The org-hide face matches the
;; background color, but with transparent backgrounds, hidden stars will still
;; be visible against whatever is behind the window. To work around this:
;;
;; 1. Use org-modern which replaces leading stars with cleaner indicators
;; 2. Set (setq org-hide-leading-stars t) and org will only show one star
;; 3. Use (setq org-startup-indented t) for org-indent-mode (hides stars better)
;; 4. For full transparency support, consider org-superstar with custom bullets
;;
;;; Code:

(require 'doom-themes)

;;
;;; Variables

(defgroup doom-matugen-theme nil
  "Options for the `doom-matugen' theme."
  :group 'doom-themes)

(defcustom doom-matugen-brighter-modeline nil
  "If non-nil, more vivid colors will be used to style the mode-line."
  :group 'doom-matugen-theme
  :type 'boolean)

(defcustom doom-matugen-brighter-comments nil
  "If non-nil, comments will be highlighted in more vivid colors."
  :group 'doom-matugen-theme
  :type 'boolean)

(defcustom doom-matugen-comment-bg doom-matugen-brighter-comments
  "If non-nil, comments will have a subtle highlight to enhance their legibility."
  :group 'doom-matugen-theme
  :type 'boolean)

(defcustom doom-matugen-padded-modeline doom-themes-padded-modeline
  "If non-nil, adds a 4px padding to the mode-line.
Can be an integer to determine the exact padding."
  :group 'doom-matugen-theme
  :type '(choice integer boolean))

;;
;;; Theme definition

(def-doom-theme doom-matugen
    "A dark theme following Material Design 3 color system principles."
  
  ;; name        default   256           16
  ;; M3 Surface colors - proper elevation hierarchy
  ((bg         '("{{colors.surface.default.hex}}" "black" "black"))
   (fg         '("{{colors.on_surface.default.hex}}" "#dfdfdf" "brightwhite"))

   ;; M3 Surface variants for subtle elevation
   (bg-alt     '("{{colors.surface_container.default.hex}}" "black" "black"))
   (fg-alt     '("{{colors.on_surface_variant.default.hex}}" "#8a8a8a" "white"))

   ;; Base spectrum using M3 surface elevation system
   (base0      '("{{colors.surface_container_lowest.default.hex}}" "black" "black"))
   (base1      '("{{colors.surface_container_low.default.hex}}" "#1e1e1e" "brightblack"))
   (base2      '("{{colors.surface_container.default.hex}}" "#2e2e2e" "brightblack"))
   (base3      '("{{colors.surface_container_high.default.hex}}" "#262626" "brightblack"))
   (base4      '("{{colors.surface_container_highest.default.hex}}" "#3e3e3e" "brightblack"))
   (base5      '("{{colors.surface_variant.default.hex}}" "#4f4f4f" "brightblack"))
   (base6      '("{{colors.outline_variant.default.hex}}" "#626262" "brightblack"))
   (base7      '("{{colors.outline.default.hex}}" "#7b7b7b" "brightblack"))
   (base8      '("{{colors.surface_bright.default.hex}}" "#efefef" "white"))

   (grey       base5)

   ;; M3 semantic colors - using proper color roles
   ;; Error role
   (red        '("{{colors.error.default.hex}}" "#ff6675" "red"))
   (red-bg     '("{{colors.error_container.default.hex}}" "#4d1f26" "red"))
   
   ;; Tertiary role (for accents and contrast)
   (orange     '("{{colors.tertiary.default.hex}}" "#ee9955" "brightred"))
   (orange-bg  '("{{colors.tertiary_container.default.hex}}" "#3d2914" "brightred"))
   
   ;; Secondary role (supporting color)
   (green      '("{{colors.secondary.default.hex}}" "#99cc99" "green"))
   (green-bg   '("{{colors.secondary_container.default.hex}}" "#1f3326" "green"))
   
   ;; Primary fixed (stable emphasis)
   (teal       '("{{colors.primary_fixed_dim.default.hex}}" "#55cac2" "brightgreen"))
   
   ;; Tertiary fixed (stable accent)
   (yellow     '("{{colors.tertiary_fixed.default.hex}}" "#ffcc77" "yellow"))
   
   ;; Primary role (main interactive color)
   (blue       '("{{colors.primary.default.hex}}" "#66bfef" "brightblue"))
   (blue-bg    '("{{colors.primary_container.default.hex}}" "#1f3d4d" "blue"))
   
   ;; Primary variant for depth
   (dark-blue  '("{{colors.primary_container.default.hex}}" "#1f3d4d" "blue"))
   
   ;; Tertiary fixed dim (subtle accent)
   (magenta    '("{{colors.tertiary_fixed_dim.default.hex}}" "#d788ef" "brightmagenta"))
   
   ;; Tertiary (main accent)
   (violet     '("{{colors.tertiary.default.hex}}" "#b9b1f1" "magenta"))
   
   ;; Primary fixed (stable primary)
   (cyan       '("{{colors.primary_fixed.default.hex}}" "#56e9ff" "brightcyan"))
   
   ;; Secondary variant
   (dark-cyan  '("{{colors.secondary_container.default.hex}}" "#1f3326" "cyan"))

   ;; Universal syntax classes - M3 semantic mapping
   (highlight      blue)              ; Primary for main interactions
   (vertical-bar   base6)             ; Outline variant for subtle borders
   (selection      blue-bg)           ; Primary container for selections
   (builtin        magenta)           ; Tertiary dim for built-in constructs
   (comments       (if doom-matugen-brighter-comments 
                       dark-cyan
                     base7))
   (doc-comments   (if doom-matugen-brighter-comments
                       (doom-lighten dark-cyan 0.2)
                     fg-alt))
   (constants      violet)            ; Tertiary for constant values
   (functions      blue)              ; Primary for main language constructs
   (keywords       cyan)              ; Primary fixed for stable emphasis
   (methods        teal)              ; Primary fixed dim for method calls
   (operators      fg)                ; On-surface for operators
   (type           yellow)            ; Tertiary fixed for type names
   (strings        green)             ; Secondary for string literals
   (variables      fg)                ; On-surface for variables
   (numbers        orange)            ; Tertiary for numeric literals
   (region         `(,(doom-darken "{{colors.primary_container.default.hex}}" 0.2) "#1a3344" "brightblack"))
   (error          red)               ; Error role
   (warning        orange)            ; Tertiary for warnings
   (success        green)             ; Secondary for success
   (vc-modified    orange)            ; Tertiary for modifications
   (vc-added       green)             ; Secondary for additions
   (vc-deleted     red)               ; Error for deletions

   ;; Modeline colors - using M3 surface variants
   (modeline-fg              fg)
   (modeline-fg-alt          fg-alt)
   (modeline-bg              (if doom-matugen-brighter-modeline
                                 blue-bg
                               base3))
   (modeline-bg-alt          (if doom-matugen-brighter-modeline
                                 (doom-darken blue-bg 0.1)
                               base2))
   (modeline-bg-inactive     base1)
   (modeline-bg-inactive-alt base0)

   (-modeline-pad
    (when doom-matugen-padded-modeline
      (if (integerp doom-matugen-padded-modeline) doom-matugen-padded-modeline 4))))

  ;;;; Base theme face overrides
  (((line-number &override) :foreground base7)
   ((line-number-current-line &override) :foreground fg)
   ((font-lock-comment-face &override)
    :background (if doom-matugen-comment-bg base4 'unspecified))
   (mode-line
    :background modeline-bg :foreground modeline-fg
    :box (if -modeline-pad `(:line-width ,-modeline-pad :color ,modeline-bg)))
   (mode-line-inactive
    :background modeline-bg-inactive :foreground modeline-fg-alt
    :box (if -modeline-pad `(:line-width ,-modeline-pad :color ,modeline-bg-inactive)))
   (mode-line-emphasis :foreground (if doom-matugen-brighter-modeline 
                                       cyan
                                     highlight))
   
   ;;;; hl-line - line highlight
   (hl-line :background base2)
   
   ;;;; solaire-mode - using M3 surface hierarchy
   (solaire-default-face :inherit 'default :background bg-alt)
   (solaire-fringe-face :inherit 'solaire-default-face)
   (solaire-line-number-face :inherit 'solaire-default-face :foreground base7)
   (solaire-hl-line-face :background base3)
   (solaire-org-hide-face :background bg-alt :foreground bg-alt)

   ;;;; css-mode <built-in> / scss-mode
   (css-proprietary-property :foreground orange)
   (css-property             :foreground green)
   (css-selector             :foreground blue)
   
   ;;;; doom-modeline
   (doom-modeline-bar :background (if doom-matugen-brighter-modeline 
                                      blue
                                    highlight))
   (doom-modeline-buffer-file :inherit 'mode-line-buffer-id :weight 'bold)
   (doom-modeline-buffer-path :inherit 'mode-line-emphasis :weight 'bold)
   (doom-modeline-buffer-project-root :foreground green :weight 'bold)
   
   ;;;; elscreen
   (elscreen-tab-other-screen-face :background base3 :foreground base1)
   
   ;;;; ivy
   (ivy-current-match :background blue-bg :distant-foreground base0 :weight 'normal)
   
   ;;;; LaTeX-mode
   (font-latex-math-face :foreground green)
   
   ;;;; markdown-mode
   (markdown-markup-face :foreground base7)
   (markdown-header-face :inherit 'bold :foreground blue)
   ((markdown-code-face &override) :background base2)
   
   ;;;; rjsx-mode
   (rjsx-tag :foreground blue)
   (rjsx-attr :foreground orange)
   
   ;;;; solaire-mode modeline
   (solaire-mode-line-face
    :inherit 'mode-line
    :background modeline-bg-alt
    :box (if -modeline-pad `(:line-width ,-modeline-pad :color ,modeline-bg-alt)))
   (solaire-mode-line-inactive-face
    :inherit 'mode-line-inactive
    :background modeline-bg-inactive-alt
    :box (if -modeline-pad `(:line-width ,-modeline-pad :color ,modeline-bg-inactive-alt)))
   
   ;;;; org-mode - M3 semantic colors
   (org-hide :foreground bg :background bg)  ; Hidden stars - matches default bg
   (org-level-1 :foreground blue :weight 'bold :height 1.3)
   (org-level-2 :foreground cyan :weight 'bold :height 1.2)
   (org-level-3 :foreground teal :weight 'bold :height 1.1)
   (org-level-4 :foreground green :weight 'bold)
   (org-level-5 :foreground violet :weight 'bold)
   (org-level-6 :foreground magenta :weight 'bold)
   (org-level-7 :foreground orange :weight 'bold)
   (org-level-8 :foreground yellow :weight 'bold)
   (org-todo :foreground red :weight 'bold)
   (org-done :foreground green :weight 'bold)
   (org-priority :foreground orange)
   (org-checkbox :foreground cyan)
   (org-tag :foreground base7 :weight 'normal)
   (org-date :foreground teal :underline t)
   (org-link :foreground cyan :underline t)
   (org-code :foreground orange :background base2)
   (org-verbatim :foreground magenta :background base2)
   (org-block :background base1 :extend t)
   (org-block-begin-line :foreground base7 :background base1 :extend t)
   (org-block-end-line :inherit 'org-block-begin-line)
   
   ;;;; treemacs
   (treemacs-root-face :foreground blue :weight 'bold :height 1.2)
   (treemacs-directory-face :foreground fg)
   (treemacs-file-face :foreground fg)
   (treemacs-git-modified-face :foreground orange)
   (treemacs-git-added-face :foreground green)
   (treemacs-git-conflict-face :foreground red)
   (treemacs-git-untracked-face :foreground base7))

  ;;;; Base theme variable overrides
  ())

;;; doom-matugen-theme.el ends here
